# ProBau.ch Environment Variables
# Copy this file to .env and fill in your values

# ─── Supabase ───────────────────────────────────────
# Get from: Supabase Dashboard → Project Settings → API
VITE_SUPABASE_URL=https://xxxxx.supabase.co
VITE_SUPABASE_ANON_KEY=eyJxxx

# Server-side only (for API routes / webhooks)
# Get from: Supabase Dashboard → Project Settings → API → service_role key
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJxxx

# ─── Stripe ─────────────────────────────────────────
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxx
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Stripe Webhook Secret (from Stripe Dashboard → Webhooks)
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Price IDs (from your Stripe products)
STRIPE_PRICE_BASIC=price_xxx
STRIPE_PRICE_PRO=price_xxx

# ─── App ────────────────────────────────────────────
VITE_APP_URL=http://localhost:8080
